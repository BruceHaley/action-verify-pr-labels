name: verify-pr-labels-avpl.yml

on:
  pull_request_target:
   types: [opened, labeled, unlabeled, synchronize]

jobs:
  verify-pr-labels:
    name: verify-pr-labels
    runs-on: ubuntu-latest

    steps:
      - uses: BruceHaley/action-verify-pr-labels@master
        with:
          github-token: '${{ secrets.GITHUB_TOKEN }}'
          node-version: '14'
      - run: yarn